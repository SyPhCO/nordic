{% extends 'base.html.twig' %}

{% block title %}Mon panier!{% endblock %}

{% block content %}
<h1 class="mt-5 mb-5">Mon panier</h1>


{% if cart|length > 0 %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Activité</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% set total = null %}
        {% for product in cart %}
            <tr>
                <th scope="row">
                    <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="100px" width="100px" style="object-fit: cover"><br>
                {{ product.product.name }}
                </th>
                <td>
                    <a href="{{ path('app_decrease_to_cart', {'id' : product.product.id}) }}">
                        <img src="{{asset('assets/images/dash.svg')}}" height="25px" class="font-weight-bold mr-1" alt="Retirer un produit">
                    </a>
                    {{ product.quantity }}
                    <a href="{{ path('app_add_to_cart', {'id' : product.product.id} )}}">
                        <img src="{{asset('assets/images/plus.svg')}}" height="25px" class="font-weight-bold ml-1" alt="Ajouter un produit">
                    </a>
                 </td>
                <td>{{ (product.product.price / 100)|number_format(2, ',', '.') }} €</td>
                <td>{{ ((product.product.price * product.quantity) / 100)|number_format(2, ',', '.') }} €</td>
                <td>
                <a href="{{ path('app_delete_to_cart', {'id' : product.product.id}) }}">
                    <img src="{{asset('assets/images/trash3-fill.svg')}}" height="25px" alt="Supprimer mon produit">
                </a>
                </td>
            </tr>
            {% set total = total + (product.product.price * product.quantity) %}
        {% endfor %}
        </tbody>
    </table>
    <div class="text-right mb-5">
        {# <b>Nombre de produit : </b> {{ cart|length }} <br> #}
        <b>Total de mon panier :</b>{{ (total / 100)|number_format(2, ',', '.') }} €
        <a href="{{ path('app_order') }}" class="btn btn-success btn-block mt-3">Valider mon panier</a>
    </div>
{% else %}
    <hr>
    <p class="font-weight-bold">Votre panier est vide.</p>
{% endif %}
<a href="{{ path('app_products') }}" class="btn btn-info ">Retour</a>
{% endblock %}
