{% extends 'base.html.twig' %}

{% block title %}Partenaires
{% endblock %}

{% block content %}

<div class="mt-5">
<hr>
		<h1 class="text-center">{{ partner.name}}</h1>
		<div class="row">
			<div class="col-lg-2 col-xs-12 container d-flex flex-column justify-content-center text-center">
				<div class="mt-5 actiGal">
					<img src="/uploads/{{ partner.gallery }}" alt="{{ partner.name }}" class="img-fluid">
				</div>
				<div class="mt-5 actiGal">
