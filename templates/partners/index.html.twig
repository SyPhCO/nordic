
{% extends 'base.html.twig' %}

{% block title %}Nos partenaires
{% endblock %}

{% block content %}
	<div class="row">
		<h1 class="col-md-12 text-center mt-5 mb-3">Nos Partenaires</h1>

		{% for partner in partners %}
			<div class="d-flex">
				<div class="actiBlock d-block mb-3">
					<a href="{{ path('app_partner', { 'slug' : partner.slug }) }}" class="d-flex align-items-center justify-content-center">
						<img src="/uploads/{{ partner.illustration }}" alt="{{ partner.name }}" class="presentation">
						<h6 class="fw-bold">{{ partner.name }}</h6>
					</a>
				</div>
			</div>
		{% endfor %}

	{% endblock %}