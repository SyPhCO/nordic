{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block content %}

<h1 class="text-center">{{ product.name}}</h1>
<div class="row"> 
	<div class="col-lg-2 col-sm-12 container d-flex flex-column justify-content-center text-center">
		<div class=" mt-5 actiGal">
			<img src="/uploads/{{ product.gallery }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="mt-5 actiGal">
			<img src="/uploads/{{ product.gallery2 }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="mt-5 actiGal">
			<img src="/uploads/{{ product.gallery3 }}" alt="{{ product.name }}" class="img-fluid">
		</div>
	</div>

	<div class="col-lg-8 col-sm-12 mt-5">
 <p>{{ product.subtitle }}</p>
		<div class="col-12 mt-5 text-center">
			<img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="col-12 my-auto">
			
			
			<hr>
			<p>{{ product.description|nl2br|raw }}
			</p>
		</div>
		<div class="container">
			<p class="actiTitle">Tarif :
			</p>
			<p>
				{{ product.rate|nl2br|raw }}
			</p>
		</div>
		<div class="container">
			<p class="actiTitle">Age :
			</p>
			<p>
				{{ product.age|nl2br|raw }}
			</p>
		</div>
		<div class="container">
			<p class="actiTitle">Lieu :
			</p>
			<p>
				{{ product.place|nl2br|raw }}
			</p>
		</div>

	</div>
	<div class="col-lg-2 col-sm-12 container d-flex flex-column justify-content-center text-center">
		<div class=" mt-5 actiGal">
			<img src="/uploads/{{ product.gallery4 }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="mt-5 actiGal">
			<img src="/uploads/{{ product.gallery5 }}" alt="{{ product.name }}" class="img-fluid">
		</div>
		<div class="mt-5 actiGal">
			<img src="/uploads/{{ product.gallery6 }}" alt="{{ product.name }}" class="img-fluid">
		</div>
	</div>
</div>

{% endblock %}
